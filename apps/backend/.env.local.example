# Copy this to .env.local and fill in your actual values
# Server
PORT=3001
NODE_ENV=development

# Database Configuration
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/reactly_dev

# Upstash Redis Configuration (for queue-based insights processing)
# Get these from your Upstash console: https://console.upstash.com
UPSTASH_REDIS_HOST=localhost
UPSTASH_REDIS_PORT=6379
UPSTASH_REDIS_PASSWORD=

# Clerk
CLERK_SECRET_KEY=sk_test_xxxxx
CLERK_PUBLISHABLE_KEY=pk_test_xxxxx
CLERK_WEBHOOK_SECRET=whsec_xxxxx

# GLM 4.6 (AI/ML API by default, also supports OpenRouter)
GLM_API_KEY=your-glm-api-key-here
GLM_BASE_URL=https://api.aimlapi.com/v1

# Discord Webhook (optional)
DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/xxxxx

# CORS
ALLOWED_ORIGINS=http://localhost:3000,https://yourdomain.com

# API Key Security
API_KEY_DETERMINISTIC_SECRET=your-deterministic-secret-here-32-chars-minimum
API_KEY_ENCRYPTION_SECRET=your-encryption-secret-here-32-chars-minimum
API_KEY_ENCRYPTION_SALT_ROUNDS=12
API_KEY_ENCRYPTION_ALGORITHM=aes-256-cbc